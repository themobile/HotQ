
.top-shade

.answers.ng-cloak(ng-show="slideIndex<3 && errorQuestions==false", ng-class='{"answers-animate3":slideIndex==3}')
    .answer-yes(ng-click='voteNow(1)',ng-class='{"small":questions[slideIndex].hasVote}')
        p(ng-style='{top:getPercentage("percentYes")}') DA
            span.percentage(ng-if='questions[slideIndex].hasVote')  - {{questions[slideIndex].percentYes}}%

    .answer-no(ng-click='voteNow(2)',ng-class='{"small":questions[slideIndex].hasVote}')
        p(ng-style='{top:getPercentage("percentNo")}') NU
            span.percentage(ng-if='questions[slideIndex].hasVote')  - {{questions[slideIndex].percentNo}}%

.question.topindex(ng-show='errorQuestions')
    // question text
    .question-intro Este cu adevărat incredibil!
    .question-body Avem o eroare pe undeva. Cel mai probabil, serverul de date hotQ întâmpină dificultăți. Te rog să revii în aplicația hotQ un pic mai târziu!

    .sendquestioncontainer(ng-show='errorQuestions')
        button.sendRetryButton(ng-disabled="!errorQuestions",ng-click="init()") Reîncearcă


//indication showing if voted
span.ng-cloak.messageSlide(ng-show='slideIndex<3',ng-class='{"answers-animate3":slideIndex==3}') {{getMessage()}}

a.info.icon-question-sign(ng-click="goLink(questions[slideIndex].link)",ng-show='questions[slideIndex].link')

.arrow-left.icon-angle-left(ng-click='prevSlide()',ng-disabled='slideIndex==0',ng-show='!errorQuestions')
.arrow-right.icon-angle-right(ng-click='nextSlide()',ng-disabled='slideIndex==3',ng-show='!errorQuestions')

//carousel
ul.ng-cloak.carousel(rn-carousel, rn-carousel-index='slideIndex', ng-init='loadq()')
    li(ng-repeat='question in questions')

        //question type header
        .question-tag(ng-class='{"isQuestion":slideIndex!=3,"isQuote":slideIndex==3}') {{question.type}}


        .question(ng-show='slideIndex!=3')
            // question text
            .question-intro {{question.text1}}
            .question-body {{question.text2}}
        .question(ng-show='slideIndex==3')
            // quote text
            .question-intro.quote-intro {{question.author}}
            .question-body.quote-body {{question.body}}



