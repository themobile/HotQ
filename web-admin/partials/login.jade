.header
    h1 Login
        h4 hotQ admin system

.content
    table.pure-table(ng-show='isLoggedIn()')
        tbody
            tr
                td username:
                td {{user.username}}
            tr
                td has token:
                td {{user.sessionToken}}

    button.btn.btn-primary.btn-lg(type='submit',ng-click='logout()',ng-show='isLoggedIn()') Logout

    .row(ng-show='!isLoggedIn()')
        //.pure-u-1-4
        .col-lg-6.col-md-6.col-sm-6.col-xs-12
            form.form-inline(role='form',novalidate,ng-hide='thankyou',ng-submit='login()')
                .form-group
                    input#username.col-xs-12.form-control(autocomplete="off",name='username',type='email',placeholder='email address',required,ng-model='user.username',ng-minlength='5',ng-maxlength='160')
                    input#password.col-xs-12.form-control(autocomplete="off",name='password',type='password',placeholder='password',required,ng-model='user.password',ng-minlength='5',ng-maxlength='160')
                    .checkbox.col-xs-12.col-md-6.col-sm-6.col-lg-6
                        label.rememberLabel(for="remember") Remember me
                            input#remember.input-lg(name='remember',type='checkbox',ng-model='user.remember')
                button.btn.btn-primary.btn-lg(type="submit", blocking-click="Logging in...") Login
    .row
        p.p-error(ng-show="error")    Error logging in.
        p.p-success(ng-show="success")    Success logging in.


